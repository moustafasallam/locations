  <div class="row">

    <div class="col s8">

      <div class="row">
        <form class="col s12" action="/" method="get">
          <div class="row">
            <div class="input-field col s9">
              <input placeholder="search" name="query" type="text" class="validate" value="<%= params[:query] %>">
            </div>
            <div class="input-field col s3">
              <input type="submit" value="search!" class="btn">
            </div>
          </div>
        </form>
      </div>

      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>City</th>
            <th>Country</th>
            <th>coords.</th>
            <th>weather</th>
            <th>Temp.</th>
          </tr>
        </thead>
        <tbody>

        <% @locations.each do |l| %>
          <tr>
            <td><%= l.city_id %></td>
            <td><%= l.city_name %></td>
            <td><%= l.country_code %></td>
            <td>
              lat:<%= l.latitude %><br/>
              lon:<%= l.longitude %>
            </td>
            <td>
              <%= l.weather_title %><br/>
              <%= l.weather_description %>
            </td>
            <td>
              temp: <%= l.temperature %><br/>
              min: <%= l.min_temp %><br/>
              max: <%= l.max_temp %>
            </td>
          </tr>
        <% end %>

          </tbody>
      </table>

    </div>

    <div class="col s4 weather-area">
      <h5>Check Weather</h5>
      <%= form_tag('/locations', id: 'weather-check-form') do %>
      <table>
        <tbody>
          <tr>
            <td>
              <%= label_tag :Country %>
              <%= select_tag :country_code, options_for_select(get_countries) %>
            </td>
          </tr>
          <tr>
            <td>
              <%= label_tag :city_name %>
              <%= text_field_tag :city_name %>
            </td>
          </tr>
          <tr>
            <td><%= submit_tag "Get Weather Data!", class: 'btn' %></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <div class="col s6" id="city-container"></div>
        <div class="col s6" id="temp-container"></div>
      </div>
    </div>

<% end %>

  </div>
